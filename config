# colors
set $bg-color #000000
set $inactive-bg-color #2f343f
set $text-color   #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color   #E53935


# apps-routes
set $terminal --no-startup-id konsole
set $browser --no-startup-id google-chrome-stable

# config
set $mod Mod4
set $alt Mod1
font pango:monospace 10

# autostart
exec --no-startup-id nm-applet
exec --no-startup-id volumeicon
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec_always --no-startup-id feh --bg-scale /home/wargun/Pictures/groot.jpg
exec_always picom

# sound
set $refreshi3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec amixer sset Master 2%+
bindsym XF86AudioLowerVolume exec amixer sset Master 2%-
bindsym XF86AudioMute exec amixer sset Master toggle

# brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20

# music
bindsym XF86AudioPlay exec  $terminal -e mocp -p
bindsym XF86AudioNext exec  $terminal -e mocp --next
bindsym XF86AudioPrev exec  $terminal -e mocp --prev
bindsym $mod+XF86AudioPlay exec $terminal -e mocp -s

# workspaces
 set $ws1 "1:"
 set $ws2 "2:"
 set $ws3 "3:"
 set $ws4 "4:"
 set $ws5 "5:"
 set $ws6 "6:"
 set $ws7 "7:"
 set $ws8 "8:"
 set $ws9 "9:"
 set $ws10 "10:"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

assign [class="Thunar"] $ws2
assign [class="Google-chrome"] $ws3
assign [class="vlc"] $ws6
assign [class="libreoffice-startcenter"] $ws7

# keybindings for i3
bindsym $alt+r mode "resize"
bindsym $mod+Shift+r restart
bindsym $mod+c reload
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus modetoggle
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $alt+F4 kill
bindsym $mod+Return exec $terminal
bindsym $mod+d exec rofi -show drun -width 100 -theme Monokai
bindsym $mod+l exec i3lock -i /home/wargun/Pictures/groot2.png -f -e
bindsym $alt+Escape exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# keybindings for applications
bindsym $mod+shift+t exec --no-startup-id thunar
bindsym $mod+shift+c exec --no-startup-id $browser
bindsym $mod+shift+v exec --no-startup-id code
bindsym $mod+v exec --no-startup-id vlc
bindsym $mod+shift+o exec --no-startup-id libreoffice
bindsym $mod+Print exec --no-startup-id spectacle -f

# resize-window
bindsym $alt+Left resize shrink width 5 px or 5 ppt
bindsym $alt+Right resize grow width 5 px or 5 ppt
bindsym $alt+Up resize grow height 5 px or 5 ppt
bindsym $alt+Down resize shrink height 5 px or 5 ppt

# window title
new_window 1pixel

# bar
bindsym $mod+m bar mode toggle
bar {
       status_command i3blocks -c ~/.config/i3/i3blocks.conf
       mode dock
       modifier None
colors {
background $bg-color
   separator #ffffff
# border background text
focused_workspace $bg-color $bg-color #FF8C00 
inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
urgent_workspace $urgent-bg-color $urgent-bg-color $text-color
}
}

# window color 
set $wbg-color           #000000
set $winactive-bg-color   #000000
set $wtext-color          #FFD700
set $winactive-text-color #C0C0C0
set $wurgent-bg-color     #ff0000

client.focused      $wbg-color      $wbg-color      $wtext-color        #00ff00
client.unfocused        $winactive-bg-color $winactive-bg-color $winactive-text-color #00ff00
client.focused_inactive $winactive-bg-color $winactive-bg-color $winactive-text-color #00ff00
client.urgent           $wurgent-bg-color    $wurgent-bg-color   $wtext-color          #00ff00
