# colors
set $bg-color #000000
set $text-color #FFFFFF
set $inactive-bg-color #000000
set $inactive-text-color #676E7D
set $lockImage=~/Pictures/locksceen.png
set $wallpaper=~/Pictures/wallpaper.jpg

# app-routes
set $terminal --no-startup-id konsole
set $browser --no-startup-id chromium
set $fileManager --no-startup-id thunar
set $video --no-startup-id vlc
set $textEditor --no-startup-id $terminal -e vim
set $office --no-startup-id libreoffice
set $netApplet --no-startup-id nm-applet
set $volume --no-startup-id volumeicon

# config
set $mod Mod4
set $alt Mod1
font pango:DejaVu Sans Mono 10

# execute with login
exec $netApplet
exec $volumeicon
exec --no-startup-id xss-lock --transfer-sleep-lock --i3lock --nofork

# always executing 
exec_always --no-startup-id feh --bg-scale $wallpaper
exec_always picom --config ~/.config/picom.conf

# sound {alsa-utils}
bindsym XF86AudioRaiseVolume exec amixer sset Master 2%+
bindsym XF86AudioLowerVolume exec amixer sset Master 2%-
bindsym XF86AudioMute exec amixer sset Master toggle

# brightness {xorg-xbacklight}
bindsym XF86MonoBrightnessUp exec xbacklight -inc 20
bindsym XF86MonoBrightnessDown exec xbacklight -dec 20

# music
bindsym XF86AudioPlay exec $terminal -e mocp -p
bindsym XF86AudioNext exec $terminal -e mocp --next
bindsym XF86AudioPrev exec $terminal -e mocp --prev
bindsym $alt+XF86AudioPlay exec $terminal -e mocp -s

# borders
default_border pixel 1
default_floating_border normal
hide_edge_borders none

# change borders
bindsym $mod+u border none
bindsym $mod+y border pixel 1
bindsym $mod+n border normal

# focus keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# direction keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# window resize keys
bindsym $alt+r mode "resize"
bindsym $alt+Left resize shrink width 5 px or 5 ppt
bindsym $alt+Right resize grow width 5 px or 5 ppt
bindsym $alt+Up resize grow height 5 px or 5 ppt
bindsym $alt+Down resize shrink height 5 px or 5 ppt

# layout keys
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus modetoggle

# general usage keys
bindsym $mod+Shift+r restart
bindsym $mod+c reload
bindsym $mod+f fullscreen toggle
bindsym $alt+F4 kill
bindsym $mod+Return exec $terminal
bindsym $mod+d exec rofi -show drun -width 100 -theme Monokai
bindsym $mod+l exec i3lock -i $lockImage -f -e
bindsym $alt+Escape exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# application keys
bindsym $mod+shift+t exec --no-startup-id $fileManager
bindsym $mod+shift+c exec --no-startup-id $browser
bindsym $mod+shift+v exec --no-startup-id $textEditor
bindsym $mod+v exec --no-startup-id vlc
bindsym $mod+shift+o exec --no-startup-id libreoffice
bindsym $mod+Print exec --no-startup-id spectacle -f

# workspaces
 set $ws1 "1:"
 set $ws2 "2:"
 set $ws3 "3:"
 set $ws4 "4:"
 set $ws5 "5:"
 set $ws6 "6:"
 set $ws7 "7:"
 set $ws8 "8:"
 set $ws9 "9:"
 set $ws10 "10:"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

assign [class="Thunar"] $ws2
assign [class="Google-chrome"] $ws3
assign [class="vlc"] $ws6
assign [class="libreoffice-startcenter"] $ws7

# bar
bindsym $mod+m bar mode toggle
bar {
       status_command i3blocks -c ~/.config/i3/i3blocks.conf
       mode dock
       modifier None
colors {
background $bg-color
   separator #ffffff
# border background text
focused_workspace #00FFFF #00FFFF #000000
inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
urgent_workspace $urgent-bg-color $urgent-bg-color $text-color
}
}

client.focused      $bg-color      $bg-color      $text-color        #00ff00
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00
